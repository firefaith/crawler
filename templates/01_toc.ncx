<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE ncx PUBLIC "-//NISO//DTD ncx 2005-1//EN" "http://www.daisy.org/z3986/2005/ncx-2005-1.dtd">
<ncx version="2005-1" xmlns="http://www.daisy.org/z3986/2005/ncx/">
  <head>
    <meta content="test id" name="dtb:uid"/>
    <meta content="0" name="dtb:totalPageCount"/>
    <meta content="0" name="dtb:maxPageNumber"/>
  </head>
  <docTitle>
    <text>{{ title }}</text>
  </docTitle>
  <docAuthor>
    <text>{{ author }}</text>
  </docAuthor>
  <navMap>
    {% for cate in cates recursive %}
    <navPoint class="navpoint-level-{{ cate.baseInfo.level }}" playOrder="{{ cate.baseInfo.order }}">
      <navLabel>
        <text>{{ cate.baseInfo.label }}</text>
      </navLabel>
      <content src="{{ cate.baseInfo.content_src }}"/>
      {% if cate.nodes %}{{ loop(cate.nodes) }}
      {% endif %}
    </navPoint>
   {% endfor %}
  </navMap>
</ncx>
